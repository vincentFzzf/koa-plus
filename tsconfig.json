{
    "compileOnSave": true,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "alwaysStrict": true,
      "baseUrl": ".",
      "diagnostics": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "es2017",
        "dom"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "pretty": true,
      "removeComments": true,
      "target": "es2016"
    }
  }
  